rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Collection des utilisateurs
    match /users/{userId} {
      // Chaque utilisateur peut lire et écrire son propre document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Les admins peuvent lire et écrire tous les documents
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Exemple : collection réservée aux admins
    match /adminData/{docId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Exemple : collection accessible à tous les choristes connectés
    match /choristeData/{docId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "choriste";
    }
  }
}
